---
export interface Props {
  id: number;
  name: string;
  price: number;
  quantity: number;
}

const { id, name, price, quantity } = Astro.props;
const total = price * quantity;
---
<article class="cart-item" box-="round contain:none">
  <row align-="between">
    <span is-="badge" variant-="background0">
      {name}
    </span>
    <div class="quantity-display">
      <span is-="badge" variant-="background1">x{quantity}</span>
    </div>
  </row>
  
  <row align-="between" space-="py:1">
    <span is-="badge" variant-="background1">
      ${price.toFixed(2)} each
    </span>
    <span is-="badge" variant-="background1">
      Total: ${total.toFixed(2)}
    </span>
  </row>

  <button 
    type="button"
    size-="small" 
    variant-="background1" 
    class="demo-btn"
  >
    &#xf2ed; Remove
  </button>
</article>

<style>
.cart-item {
  --box-border-color: var(--background1);
}

.demo-btn {
  width: 100%;
  margin-top: 0.5rem;
}

.demo-btn:active {
  --button-primary: var(--background2);
}

.quantity-display {
  min-width: 4ch;
  text-align: center;
}
</style>